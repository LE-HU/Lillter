<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to Lillter</h1>
    <h2>
      Little microposts board inspired by the popular micropost portal.
    </h2>
    <h2>Powered by <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "60", class: "rails-logo"),
"https://rubyonrails.org/" %></h2>
    <p><%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %></p>

    <%# <p><%= link_to "Log in as Guest User", login_path, class: "btn btn-lg btn-primary", method: :post </p> %>


    <button class="btn btn-lg btn-primary" style="padding: 0px;">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

        <%= f.hidden_field :email, class: 'form-control', value: "guest@example.com" %>

        <%= f.hidden_field :password, class: 'form-control', value: "foobar" %>

        <%= f.submit "Log in as Guest", class: "btn btn-lg btn-primary" %>
      <% end %>
    </button>


  </div>
  <%# <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"),
"https://rubyonrails.org/" %>
<% end %>
